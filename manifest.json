 {
  "manifest_version": 2,
  "name": "VK Music Streamer",
  "version": "1.0",

  "icons": {
    "128": "icon128.png",
    "16": "icon32.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://vk.com/*" ],
      "js": [ "content.js" ]
    }
  ],
  "background": {
    "scripts": ["bg.js"]
  },
  "permissions": [
    "https://discordapp.com/*"
  ],

      "browser_action": {
        "default_title": "VKMS",
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    }
	
}